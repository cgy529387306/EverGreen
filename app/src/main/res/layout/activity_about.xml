<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/bg_home"
    android:orientation="vertical">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/bg_logo"
        android:layout_marginTop="120dp"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/bg_tm"
        android:layout_marginTop="20dp"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="80dp"
        android:textColor="@color/text_black_1"
        android:textSize="26sp"
        android:text="V.XXXXX"/>
    <TextView
        android:id="@+id/btn_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:textColor="@color/text_black_1"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="@mipmap/bg_button"
        android:text="@string/version_update"/>
    <TextView
        android:id="@+id/btn_exit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:textColor="@color/text_black_1"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_gravity="center"
        android:background="@mipmap/bg_button"
        android:text="@string/exit"/>
    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="www.evergreenbiosystems.com"
        android:textSize="12sp"
        android:textColor="@color/text_black_3"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="15dp"
        android:text="Copyright@2018Evergreen Sciences,Inc.All rights reserverd."
        android:textSize="12sp"
        android:textColor="@color/text_black_3"/>
</LinearLayout>
