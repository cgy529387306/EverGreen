<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.android.mb.evergreen">
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <application
        android:name=".app.MBApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".activity.LoadingActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.HomeActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.ManagerActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.RegisterActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.LoginActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.SetPwdActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.AboutActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.ContactActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.NewTestActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.SettingActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.QueryDataActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.ManageTypeActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.TestResultActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.QueryResultActivity"
            android:screenOrientation="portrait"/>
        <activity android:name=".activity.OutputActivity"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".activity.PhotoPreviewActivity"
            android:screenOrientation="portrait" />
        <!--图片多选页面-->
        <activity
            android:name="me.nereo.multi_image_selector.MultiImageSelectorActivity"
            android:configChanges="orientation|screenSize"
            android:screenOrientation="portrait" />
    </application>

</manifest>